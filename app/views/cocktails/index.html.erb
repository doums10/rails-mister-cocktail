<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>
<h1>Welcome to the Cocktail Bar</h1>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
     
      <li class="nav-item">
        <%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-new" %>
      </li>
      
    </ul>
  </div>
</div>


<div class="cards container mt-5">


  <% @cocktails.each do |cocktail| %>
  <% if cocktail.photo.url %>
  <div class="card-category" data-aos="flip-down" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>)">
    <%= cocktail.name %>
    <div class="icon-eye hvr-float"> <i class="far fa-eye">
        <%= link_to "Show", cocktail_path(cocktail) %></i>
    </div>
    <div class="icon-trash hvr-float"><i class="far fa-trash-alt">
      <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></i>
      </div>
  </div>
  <% end %>
  <% end %>
</div>
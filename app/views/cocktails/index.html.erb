<p id="notice">
  <%= notice %>
</p>
<div class="container mt-5">
  <h1>Cocktails</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @cocktails.each do |cocktail| %>
      <tr>
        <td>
          <%= cocktail.name %>
        </td>
        <td>
          <%= link_to 'Show', cocktail %>
        </td>
        <td>
          <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New cocktail', new_cocktail_path %>
</div>
<% @cocktails.each do |cocktail| %>
<div class="cards container mt-5">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @article.photo height: 300, width: 400, crop: :fill %>)">Breakfast <%= cocktail.name %>
  </div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
    Lunch
  </div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
    Dinner
  </div>
</div>
<% end %>
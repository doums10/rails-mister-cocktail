<div class="container mt-5" data-aos="zoom-out-right">
  
  <%= link_to "Back", cocktails_path, class: "btn btn-flat" %>
  <div class="card-trip">
    <%= cl_image_tag @cocktail.photo, crop: :fill %>
    <div class="card-trip-infos">
      <div>
        <h1>
          <%= @cocktail.name%>
        </h1>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %>
          </li>
          <li>
            <%= dose.ingredient.name %>
          </li>
          <% end %>
        </ul>
        <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-ing" %>
      </div>
    </div>
  </div>
</div>